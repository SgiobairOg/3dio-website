html
  body
    script(src="https://releases.3d.io/3dio-js/1.x.x-beta/3dio.min.js")
    script.

      var DEFAULT_REDIRECT_URL = "!{urlPathRoot}/"

      io3d.utils.ui.signUp().then(redirect, io3d.utils.ui.message.error)

      function redirect () {
        window.document.location = gerRedirectionUrlFromQuery() || DEFAULT_REDIRECT_URL
      }

      function gerRedirectionUrlFromQuery () {
        var redirect = /redirect=([^&]+)/i.exec(window.document.location)
        return redirect ? redirect[1] : null
      }